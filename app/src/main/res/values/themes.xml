<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tema_Estilos" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.Personalizado" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Color Primario -->
        <item name="colorPrimary">#7cb342</item>
        <item name="colorPrimaryVariant">#4b830d</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Color Secundario -->
        <item name="colorSecondary">#fdd835</item>
        <item name="colorSecondaryVariant">#c6a700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Color de la barra de estado (Notificaciones) -->
        <item name="android:statusBarColor">@color/rojooscuro</item>
        <item name="android:textViewStyle">@style/Widget.Personalizado.TextView</item>

    </style>

    <!-- Tema del Segundo Activity -->
    <style name="Theme.Main2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Color Primario -->
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color Secundario -->
        <item name="colorSecondary">#d50000</item>
        <item name="colorSecondaryVariant">#9b0000</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Color de la barra de estado (Notificaciones) -->


    </style>

    <!-- Estilos -->
    <style name="Widget.Personalizado.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/azulcielo</item>
        <item name="android:textSize">15dp</item>
        <item name="android:fontFamily">@font/alfa_slab_one</item>
    </style>


    <style name="Widget.AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/lima</item>
        <item name="android:textColor">@color/rojooscuro</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:fontFamily">@font/alfa_slab_one</item>
    </style>

    <style name="Theme.Personalizado.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Personalizado.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Personalizado.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>